{
  "compilerOptions": {
    "target": "es2016",
    "module": "es6",
    "strict": true,
    "noImplicitAny": false,
    "noEmit": true,
    "allowJs": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "resolveJsonModule":true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./src",
    "rootDir": "src",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "typeRoots": [
      "node_modules/@types",
      "node_module/phaser/types"
    ],
  },
  "include": ["src/**/*.ts", ".d.ts"],
  "exclude": [
    "node_modules",
    "./src/assets"
  ]
}
